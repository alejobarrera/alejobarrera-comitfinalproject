extends ../layout

block content
  section#page-title(
    style="background-image: url('/images/headers/header-news.jpg'); padding: 120px 0;" 
    data-bottom-top="background-position:0px 300px;" 
    data-top-bottom="background-position:0px -300px;"
  )
    .container.clearfix
      h2= title
      span Discover the latest news, events and useful information for you
      
  section#content.custom-my-80
    .container-fluid.clearfix
      .row
        .col-md-3
          include ../includes/users-menu
        .col-md-9.px-5
          h3.mb-5= sectiontitle
          .table-responsive
            table.table.table-striped
              thead.thead-custom-bg
                  tr 
                    th Actions
                    th √çtem
                    th Date
              tbody
                each service in services
                  tr
                    td
                      a(href='/services/service/' + service.id + '/edit', title="Edit item") 
                        i.fas.fa-edit
                        span.sr-only Edit
                      form(
                        method="POST", 
                        action='/services/service/' + service.id + '?_method=DELETE',
                        class="form-inline"
                        )
                        a(href="javascript:void(0);", title="Delete item", onclick="if(confirm('are you sure you want to delete this service?')){this.parentNode.submit();}") 
                          i.fas.fa-trash
                          span.sr-only Delete
                    td 
                      a(href='/services/service/' + service.id + '/edit', title="Edit item")=service.headline
                    td=service.createdAt
                else
                  tr
                    td.text-danger(colspan="5") Services not find.
