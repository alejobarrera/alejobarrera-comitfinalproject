extends ../layout

block content

  section#page-title(style="background-image: url('/images/headers/header-contactus.jpg'); padding: 80px 0;" )
    .container.clearfix
      h2= title
      span= subtitle

  section#content.custom-my-80
    .container.clearfix
      .row
        .col-md-4
          address
            strong Headquarters:
            br
            | 1144 45 Street SW
            br
            | Calgary, AB Canada
            br
            | T2H 4E3

          strong Phone: 
          | (1) 345 22 33 22
          br
          strong Fax: 
          | (1) 345 33 22 33
          br
          strong Email: 
          a(href='mailto:info@yourdomain.com') info@yourdomain.com

        .col-md-8
          p If you have any questions about our programs or services, please fill out the form below.
          if successsave
            .alert.alert-success
              strong Thank you!
              br
              | Your contact has been saved successfully. We will contact you soon.

          form(method="POST")
            .form-row
              .col-sm-6.form-group
                label(for="firstname" class="label-color font-weight-bold") Firstname (*)
                input.form-control#firstname(
                  name="firstname"
                  type="text"
                  placeholder= "Enter your firstname"
                  title= "Firstname is required. Enter your firstname"
                  minlength= "2"
                  maxlength= "150"
                  class=errors.firstname ? "is-invalid" : ""
                  value=""
                  required
                )
                if errors.firstname
                  #firstname.invalid-feedback= errors.firstname.message

              .col-sm-6.form-group
                label(for="lastname" class="label-color font-weight-bold") Lastname (*)
                input.form-control#firstname(
                  name="lastname"
                  type="text"
                  placeholder="Enter your lastname"
                  title= "Lastname is required. Enter your lastname"
                  minlength= "2"
                  maxlength="150"
                  class=errors.lastname ? "is-invalid" : ""
                  value=""
                  required
                )
                if errors.lastname
                  #lastname.invalid-feedback= errors.lastname.message

              .col-sm-6.form-group
                label(for="phone" class="label-color font-weight-bold") Phone (*)
                input.form-control#firstname(
                  name="phone"
                  type="tel"
                  placeholder="Enter your phone number"
                  title= "Phone is required. Enter your phone number"
                  minlength= "7"
                  maxlength="15"
                  class=errors.phone ? "is-invalid" : ""
                  value=""
                  required
                )
                if errors.phone
                  #phone.invalid-feedback= errors.phone.message

              .col-sm-6.form-group
                label(for="email" class="label-color font-weight-bold") Email (*)
                input.form-control#firstname(
                  name="email"
                  type="email"
                  placeholder="Enter your email"
                  title= "Email is required. Enter your email"
                  mainlegth= "10"
                  maxlength="255"         
                  class=errors.email ? "is-invalid" : ""
                  value=""
                  required
                )
                if errors.email
                  #email.invalid-feedback= errors.email.message

              .col-sm-12.form-group
                label(for="subject" class="label-color font-weight-bold") Subject (*)
                input.form-control#subject(
                  name="subject"
                  type="text"
                  placeholder="Enter a subject"
                  title= "Subject is required. Enter a subject"
                  minlegth= "5"
                  maxlength="255"
                  class=errors.subject ? "is-invalid" : ""
                  value=""
                  required
                )
                if errors.subject
                  #subject.invalid-feedback= errors.subject.message

              .col-sm-12.form-group
                label(for="comment" class="label-color font-weight-bold") Message or comment (*)
                textarea.form-control#comment(
                  name="comment"
                  placeholder="Enter your comment or message"
                  title= "Message or comment is required. Enter your comment or message"
                  rows= "10"
                  cols= "30"
                  maxlength="2000"
                  class=errors.comment ? "is-invalid" : ""
                  value=""
                  required
                )
                if errors.comment
                  #comment.invalid-feedback= errors.comment.message          

              input(
                name="status"
                type="hidden"
                value="Received"
              )

              button.btn.btn-primary(type="submit") <i class="fas fa-paper-plane"></i> Submit