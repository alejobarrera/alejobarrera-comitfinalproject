extends ../layout

block content
  section#page-title(style="background-image: url('/images/headers/header-news.jpg'); padding: 120px 0;" )
    .container.clearfix
      h2= title
      span Discover the latest news, events and useful information for you
      
  section#content.custom-my-80
    .container-fluid.clearfix
      .row
        .col-md-3
          include ../includes/users-menu
        .col-md-9.px-5
          h3.bmb-5 All news
          table.table.table-striped
            thead.thead-dark
                tr 
                  th Actions
                  th Item
                  th Date
            tbody
              each post in posts
                tr
                  td
                    a(href='/posts/post/' + post.id + '/edit', title="Edit item") 
                      i.fas.fa-edit
                      span.sr-only Edit
                    form(
                      method="POST", 
                      action='/posts/post/' + post.id + '?_method=DELETE',
                      class="form-inline"
                      )
                      a(href="javascript:void(0);", title="Delete item", onclick="if(confirm('are you sure you want to delete this post?')){this.parentNode.submit();}") 
                        i.fas.fa-trash
                        span.sr-only Delete
                  td
                    a(href='/posts/post/' + post.id + '/edit', title="Edit item")=post.headline
                  td=post.createdAt
              else
                tr
                  td.text-danger(colspan="3") Posts not find.