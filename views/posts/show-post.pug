extends ../layout

block content
  section#page-title(style="background-image: url('/images/headers/header-news.jpg'); padding: 120px 0;" )
    .container.clearfix
      h2= title
      span= subtitle
      
  section#content.my-5
    .container.clearfix
      .row
        .col-md-8.mb-5
          h2= post.headline
          img(
            class="card-img-top" 
            src="/images/news/examplenews-01.jpg" 
            alt="Lorem ipsum dolor sit amet, consectetur adipiscing elit."
          )  
          p= post.abstract
          p= post.fulltext
          span.font-weight-bold Author: 
          span= post.author
          br
          span.font-weight-bold Autor's Email: 
          span= post.authoremail
          br
          span.font-weight-bold Source: 
          span= post.source
          br
          span.font-weight-bold Source's Website: 
          span= post.sourceurl



